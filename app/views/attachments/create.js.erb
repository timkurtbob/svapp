const attachments = document.querySelector('.attachments');
const addAttachmentArea = document.querySelector('.attachment-upload-render');
const attachmentsPartial = "<%= j render 'components/attachments', attachments: @attachments %>";

function addAttachment() {
  attachments.remove();
  addAttachmentArea.insertAdjacentHTML('afterend', attachmentsPartial);
}

addAttachment();
