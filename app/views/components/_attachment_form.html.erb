<%= simple_form_for( ([entry, attachment]), method: :post, remote: true, html: { autocomplete: 'off', wrap: 'hard'}) do |f| %>
    <%= f.error_notification %>
    <%= f.input :user,
                as: :hidden,
                input_html: {value: "#{current_user.id}"},
                label: false %>
    <%= f.input :entry,
                as: :hidden,
                input_html: {value: "#{@entry.id}", class: "hidden"},
                label: false %>
    <%= f.input :name,
                label: false,
                label_html: {class: 'btn-second-choice'} %>
    <%= f.input :name_cache, as: :hidden %>
    <%= f.submit "Anhang hochladen" %>
  <% end %>
