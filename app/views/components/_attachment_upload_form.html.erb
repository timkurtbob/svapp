<div hidden class="attachment-form">
  <%= simple_form_for( ([entry, attachment]), method: :post, remote: true, html: { autocomplete: 'off', wrap: 'hard'}) do |f| %>
    <%= f.error_notification %>
    <%= f.input :user,
                input_html: {value: "#{current_user.id}"},
                label: false %>
    <%= f.input :entry,
                input_html: {value: "#{@entry.id}"},
                label: false %>
    <%= f.input :name,
                label: false %>
    <%= f.input :name_cache, as: :hidden %>
    <%= f.submit "Submit", class: "submit-btn" %>
  <% end %>
</div>

<i class="fas fa-plus-circle fa-3x" id="add-attach-btn"></i>
