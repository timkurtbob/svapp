<div class="attachments">
  <% @attachments.each do |a| %>
    <div class="attach-link">
      <%= link_to "#{a.name}", target: :_blank do %>
        <p># <%= a.id %></p>
        <%= cl_image_tag(a.name, :width=>160, :height=>160, :gravity=>"east", :crop=>"fill") %>
        <br>
        <p><%= a.file_name %></p>
      <% end %>
    </div>
  <% end %>
  <div class="stop-attach-float">
  </div>
</div>
