<div class="container">
  <h2 class="red-font margin-30">Profil bearbeiten</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :phone, required: true, label: "Telefonnummer", autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: "Neues Passwort",
                  hint: "Frei lassen falls es nicht geändert werden soll.",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Neues Passwort bestätigen",
                  hint: "Ebenfalls freilassen falls es nicht geändert werden soll.",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  label: "Aktuelles Passwort",
                  hint: "Das aktuelle Passwort muss zur Bestätigung eingegeben werden.",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="btn-first-choice">
      <%= f.button :submit, "Speichern" %>
    </div>
  <% end %>

  <%= link_to "Zurück", :back, class: "btn-second-choice" %>

  <p class="margin-top-30"><%= link_to "Meinen Account löschen", registration_path(resource_name), class: "btn-second-choice", data: { confirm: "Bist du sicher das du deinen Account löschen möchtest?" }, method: :delete %></p>

</div>
