<h2>Sign up</h2>

<%= simple_form_for (@school) %>


<%= simple_form_for[(resource, as: resource_name, url: registration_path(resource_name)), @school] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "first_name" }%>
    <%= f.input :second_name,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :birthday,
                as: :date,
                start_year: Date.today.year - 75,
                end_year: Date.today.year - 10,
                order: [:day, :month, :year],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "birthday" }%>
    <%= f.input :school_id,
                collection: ['BÃ¼rgermeister Herz Grundschule'] %>
    <%= f.association :school %>
    <%= f.input :form,
                collection: 5..13,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :klass,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :role,
                collection: ['Klassensprecher', 'Jahrgangssprecher', 'Schulsprecher', 'Moderator', 'Lehrer'],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
