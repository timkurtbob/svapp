<div class="red-background">
  <div class="container">
    <div class="logo-container">
      <%= cl_image_tag("logo", width: 150, height: 150, crop: :fill) %>
    </div>
    <div class="landing-description">
      <h2>Mehr als lernen</h2>
      <h1>SV-App</h1>
    </div>

    <div class="container registration-form">
      <h2 class="registration-title">Neu Anmelden</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      label: 'Vorname(n)',
                      label_html: { :class => 'red-form' },
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "first_name" }%>
          <%= f.input :second_name,
                      label: 'Nachname',
                      label_html: { :class => 'red-form' },
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "last_name" }%>
          <%= f.association :school,
                      label: 'Schule',
                      include_blank: false,
                      label_html: { :class => 'red-form' },
                      collection: School.order(:name) %>
          <%= f.input :phone,
                      label: 'Mein Nummer',
                      label_html: { :class => 'red-form' },
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last_name" }%>
          <%= f.input :email,
                      label: 'Email',
                      label_html: { :class => 'red-form' },
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: 'Passwort',
                      label_html: { :class => 'red-form' },
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: 'Passwort bestÃ¤tigen',
                      label_html: { :class => 'red-form' },
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <%= render "devise/shared/links" %>
        <div class="form-actions">
          <%= f.button :submit, "Registrieren", :class => "btn-start-first-choice" %>
        </div>
      <% end %>


    </div>

  </div>
</div>
